<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
    </startup>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="MyServiceTypeBehaviors" name="Server.LibraryService">
        <endpoint address="" behaviorConfiguration="behavior1" binding="webHttpBinding"
          name="LibraryServiceEndpoint" contract="LibraryInterfaces.ILibraryService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9999/Server.csp/" />
          </baseAddresses>
        </host>
      </service>
      <service behaviorConfiguration="MyServiceTypeBehaviors" name="Server.LibraryAdministrationService">
        <endpoint address="" binding="basicHttpBinding"
          bindingConfiguration="" name="LibraryAdministrationServiceEndpoint" contract="LibraryInterfaces.ILibraryAdministrationService" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9999/LibraryAdministrationService" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <endpointBehaviors>
        <behavior name="behavior1">
          <webHttp />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="MyServiceTypeBehaviors">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
        <behavior name="">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>